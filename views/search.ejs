<div class="author">
    <h1 class="author_heading">Search Results</h1>
</div>

<section class="articles">
    <% if (data.length > 0) { %>
        <% data.forEach(post => { %>
            <article class="article">
                <h2 class="article_title"><a href="/post/<%= post._id %>"><%= post.title %></a></h2>
                <p class="article_description"><%= post.description %></p>
            </article>
        <% }) %>
    <% } else { %>
        <p>No results found for "<%= locals.description %>"</p>
    <% } %>
</section>